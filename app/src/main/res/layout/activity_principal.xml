<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Principal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_insertar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe una tarea nueva"
            android:inputType="textCapWords"
            />
        <Button
            android:id="@+id/btn_anhadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Añadir"
            android:onClick="anhadirElemento"/>

        <TextView
            android:id="@+id/textv_marcados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Aquí se muestran los elementos marcados \n\n"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_showd"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="showDialog"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/btn_dialf"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="dialogFragment"
            android:layout_gravity="center"
            android:onClick="lanzarSegunda"/>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
